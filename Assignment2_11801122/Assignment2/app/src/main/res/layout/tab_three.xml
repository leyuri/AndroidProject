<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/tab3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#ECE0F8"
    android:layout_marginTop="50dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginBottom="50dp"
    android:orientation="vertical">







    <TextView
        android:id="@+id/textView1Tab3"
        android:textStyle="bold"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Name(ID)"/>

    <TextView
        android:id="@+id/productNameTab3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView2Tab3"
        android:textStyle="bold"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category"/>
    <TextView
        android:id="@+id/categoryTab3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView3Tab3"
        android:textStyle="bold"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Production - Expiration"/>
    <TextView
        android:id="@+id/productionExp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView4Tab3"
        android:textStyle="bold"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price of Box"/>
    <TextView
        android:id="@+id/priceOfBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>
