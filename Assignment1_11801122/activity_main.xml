<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffeeeeee" >

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/coffeeMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="8dp"
            />
        <GridView
            android:id="@+id/gridView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/layout1"
            android:background="#ffeeeeee"
            android:numColumns="2"
            android:horizontalSpacing="8dp"
            android:verticalSpacing="8dp"
            android:layout_margin="8dp"
            android:nestedScrollingEnabled="true"
            android:adjustViewBounds="true"/>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ㅎㅇ">


        </ScrollView>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_marginBottom="16dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_margin="8dp"
                android:text="Toppings"/>

            <CheckBox
                android:id="@+id/topping_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Whipped creame"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:paddingRight="24dp"/>



            <CheckBox
                android:id="@+id/caramel_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caramel"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:paddingRight="24dp"/>


            <CheckBox
                android:id="@+id/marshmallow_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marshmallow"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:paddingRight="24dp"/>


            <CheckBox
                android:id="@+id/extraShot_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ExtraShot"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:paddingRight="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_marginBottom="16dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_margin="8dp"
                android:text="quantity"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:onClick="decrement"
                    android:layout_marginBottom="16dp"
                    android:layout_margin="8dp"
                    android:background="#FADAD8"
                    android:text="-"/>


                <TextView
                    android:id="@+id/quantity_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="10sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000000"/>


                <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:onClick="increment"
                    android:layout_margin="8dp"
                    android:background="#FADAD8"
                    android:layout_marginBottom="10dp"
                    android:text="+"/>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_marginBottom="16dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_margin="8dp"

                android:text="Order Summary"/>

            <TextView
                android:id="@+id/price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:textColor="#000000"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnOrder"
                android:background="#D09E88"
                android:layout_margin="8dp"
                android:text="order"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="btnBasket"
                android:background="#9B8281"
                android:text="Add to Basket"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnPay"
                android:background="#534847"
                android:textColor="#FFFFFF"
                android:layout_margin="8dp"
                android:text="pay"/>




        </LinearLayout>
</ScrollView>
